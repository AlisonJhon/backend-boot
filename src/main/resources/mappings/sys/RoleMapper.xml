<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bdfint.backend.modules.sys.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.bdfint.backend.modules.sys.bean.Role" >
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="office_id" property="officeId" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="enname" property="enname" jdbcType="VARCHAR" />
        <result column="role_type" property="roleType" jdbcType="VARCHAR" />
        <result column="data_scope" property="dataScope" jdbcType="CHAR" />
        <result column="is_sys" property="isSys" jdbcType="VARCHAR" />
        <result column="useable" property="useable" jdbcType="VARCHAR" />
        <result column="create_by" property="createBy" jdbcType="VARCHAR" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
        <result column="update_by" property="updateBy" jdbcType="VARCHAR" />
        <result column="update_date" property="updateDate" jdbcType="TIMESTAMP" />
        <result column="remarks" property="remarks" jdbcType="VARCHAR" />
        <result column="del_flag" property="delFlag" jdbcType="CHAR" />
    </resultMap>

    <sql id="Base_Column_List">
        id, office_id, name, enname, role_type, data_scope, is_sys, useable, create_by, create_date,
        update_by, update_date, remarks, del_flag
    </sql>

    <!-- 根据roleId查询用户 -->
    <select id="selectRoleByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_role a
        LEFT JOIN sys_user_role sur WHERE sur.role_id = a.id
        WHERE a.del_flag = 0 AND sur.user_id = #{userId}
    </select>

    <!-- 删除角色菜单关联表 -->
    <delete id="deleteRoleMenuByRoleId">
        DELETE FROM sys_role_menu WHERE role_id = #{roleId}
    </delete>

    <!-- 删除角色菜单关联表 -->
    <delete id="deleteUserRoleByRoleId">
        DELETE FROM sys_user_role WHERE role_id = #{roleId}
    </delete>

    <!-- 保存角色菜单关联表 -->
    <insert id="insertRoleMenu">
        INSERT INTO sys_role_menu(role_id, menu_id)
        <foreach collection="menuIds" item="menuId" separator=" union all ">
            SELECT #{roleId}, #{menuId}
        </foreach>
    </insert>

</mapper>